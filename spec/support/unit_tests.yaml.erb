name: Unit tests
on:
  push

jobs:
  test:
    runs-on: ubuntu-latest
    steps:
    - uses: actions/cache@v2
      with:
        path: vendor/bundle
        key: ${{ runner.os }}-gems-${{ hashFiles('**/Gemfile.lock') }}
        restore-keys: |
          ${{ runner.os }}-gems-
    - uses: actions/checkout@v2
    - uses: ruby/setup-ruby@v1
      with:
        ruby-version: 2.6
    - run: bundle config path vendor/bundle
    - run: bundle install --jobs 4 --retry 3
    - run: bundle exec rake rubocop
    - run: bundle exec rake test
    - run: bundle exec rake test TESTING_LEGACY=1
    - run: bundle exec rake js:all
    <%- gemfiles.each do |gemfile| -%>
    - run: BUNDLE_GEMFILE=<%= gemfile.inspect %> bundle install --jobs 4 --retry 3 && bundle exec rake test
    <%- end -%>
    - run: cd spec/dummy && bundle install && bundle exec rails test:system && cd ../..
